            <field name="padding">3</field>
        </record>
		
		<record id="seq_delegate_task" model="ir.sequence">
            <field name="name">Delegate Task Sequence</field>
            <field name="code">delegate.task.seq</field>
            <field name="prefix">DLG/%(y)s%(month)s%(day)s/</field>
            <field name="padding">3</field>
        </record>
		
		<record id="seq_internal_it" model="ir.sequence">
            <field name="name">Internal IT Sequence</field>
            <field name="code">internal.it.seq</field>
            <field name="prefix">REQ-IT/%(y)s%(month)s%(day)s/</field>
            <field name="padding">3</field>
        </record>
		
		<record id="seq_transport_ops" model="ir.sequence">
            <field name="name">Transport Ops Sequence</field>
