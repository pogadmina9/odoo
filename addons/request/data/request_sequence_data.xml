            <field name="padding">3</field>
        </record>
		
		<record id="delete_attachment" model="mail.message.subtype">
            <field name="name">Attachment Deleted</field>
            <field name="res_model">req.task</field>
            <field name="description">Attachment Deleted</field>
            <field name="default" eval="True"/>
        </record>

    </data>
</odoo>
